}

<div class="container">
    <main role="main" class="pb-3">
        @{
            bool isAdmin = Context.User.IsInRole("Admin");
        }
        @if (isAdmin)
        {
            <div class="row justify-content-end mb-3">
                <div class="col-md-3">
                    <a class="btn btn-primary" href="/answer/create">Create Answer</a>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-12">
                <div id="answer-dashboard" data-isAdmin="@isAdmin"></div>
            </div>
        </div>
    </main>
</div>
