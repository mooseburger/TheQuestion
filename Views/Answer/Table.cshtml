<div class="container">
    <main role="main" class="pb-3">
        @{
            bool isAdmin = Context.User.IsInRole("Admin");
        }
        @if (isAdmin)
        {
            <div class="row justify-content-end mb-3">
                <div class="col-md-3">
                    <form asp-controller="Answer" asp-action="BulkReindex">
                        <button class="btn btn-primary" type="submit">Re-index All Answers</button>
                    </form>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-12">
                <div id="answer-table"></div>
            </div>
        </div>
    </main>
</div>
