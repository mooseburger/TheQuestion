@using TheQuestion.Model.Auth;

@model ChangePassword;

<div class="container">
    <main role="main" class="pb-3">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-controller="Auth" asp-action="ChangePassword" method="post" class="mb-3">
                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label"></label>
                        <input class="form-control" asp-for="CurrentPassword" />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input class="form-control" asp-for="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input class="form-control" asp-for="ConfirmPassword" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Change Password</button>
                    <a href="/answer/dashboard" class="btn btn-outline-secondary">Cancel</a>
                </form>
            </div>
        </div>
        @if (Model.Errors?.Any() == true)
        {
            <div class="row justify-content-center">
                <div class="col-md-6">
                    @foreach (var error in Model.Errors)
                    {
                        <p class="text-danger mb-3">@error.Code - @error.Description</p>
                    }
                </div>
            </div>
        }
    </main>
</div>
